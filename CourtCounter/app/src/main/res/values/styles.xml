<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="teamName">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/teamColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/teamTextSize</item>
    </style>

    <style name="score">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/scoreColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/scoreTextSize</item>
    </style>

    <style name="button">
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:layout_marginHorizontal">@dimen/marginHorizontal</item>
    </style>
</resources>